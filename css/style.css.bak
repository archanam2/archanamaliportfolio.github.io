*{
    margin: 0; 
    padding: 0;
    box-sizing: border-box;
    font-family: 'Times New Roman', Times, serif;
}
header{
    width: 100%;
    height: 100vh;
    background-image:linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.1)), url('../images/background.jpg');
    background-repeat: no-repeat;
    background-size: cover;
}
nav {
    height: 20vh;
    position: relative;
    width: 100%;
    line-height: 60px;
    z-index: 1000;
    background-color: rgba(0,0,0,0.7);
    display: flex;
    justify-content: space-between;
    align-items: center;
}
nav .logo{
    width: 20%;
    font-weight: bold;
    text-transform: uppercase;
    color: crimson;
    padding-top: 20px;
    text-align: center;
    
    
   
}
nav ul {
    padding-top: 0;
    line-height: 30px;
    list-style: none;
    
    overflow: hidden;
    color: crimson;
    padding: 0;
    text-align: center;
    text-transform: uppercase;
    margin: 0;
    padding-right: 40px;
    transition: 1s;

}

nav.black ul {
    
}

nav ul li {
    display: inline-block;
    padding: 15px 30px;;
}

nav ul li a {
    text-decoration: none;
    color: crimson;
    font-size: 18px;
    font-weight: bold;
}

.menu-icon {
    line-height: 30px;
    width: 100%;
    background: #000;
    text-align: right;
    box-sizing: border-box;
    padding: 5px 5px;
    cursor: pointer;
    color: white;
    display: none;
}

@media(max-width: 768px) {

    .logo {
          position: relative;
          
          display: none;
    }
    nav{
        height: 7vh;
    }

    nav ul {
          max-height: 10px;
          background: #000;
    }

    nav.black ul {
          background: #000;
    }

    .showing {
          max-height: 34em;
    }

    nav ul li {
          box-sizing: border-box;
          width: 100%;
          padding: 24px;
          text-align: center;
    }

    .menu-icon {
          display: block;
    }
}

main{
    width: 100%;
    height: 70vh;
    padding-top: 150px;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: white;
    
}
section{

}

section h3{
    font-size: 30px;
     font-weight: 300;
     letter-spacing: 5px;
     word-spacing: 5px;
     text-shadow: 1px 1px 2px black;
}

section h2{
    font-size: 55px;
    font-weight: 400;
    letter-spacing: 5px;
    word-spacing: 10px;
    text-shadow: 2px 1px  5px black;
    text-transform: uppercase;
}
@media (max-width: 768px){
    header{
        height: 80vh;
    }
    main{
        height: 30vh;
        padding-top: 100px;
        padding-bottom: 50px;
    }
    section h3{
        font-size:24px;
        font-weight: 100;
        letter-spacing: 2px;
        word-spacing: 2px;
    }
    section h2{
        font-size: 38px;
        font-weight: 100;
        letter-spacing: 2px;
        word-spacing: 2px;
    }
}
section a{
    padding: 12px 30px;
    border-radius: 4px;
    outline: none;
    text-transform: uppercase;
    font-size: 13px;
    font-weight: 500;
    text-decoration: none;
    letter-spacing: 2px;
    color: wheat;
}

section .btn{
    background: crimson;
    color: #000;
}
section h1{
    font-size: 30px;
    letter-spacing: 3px;
    word-spacing: 5px;
}

.change-context:after{
    text-transform: uppercase;
    content: '';
    animation: changeme 10s infinite linear;
    color: crimson;
}
@keyframes changeme{
    0% {content: "Programmer";}
    33% {content: "Front End Web developer";}
    66% {content: "Web Designer";}
    100% {content: "Python Programmer";}
}
@media (max-width: 768px){
    section h1{
        font-size: 24px;
        letter-spacing: 2px;
        word-spacing: 2px;

    }
}
